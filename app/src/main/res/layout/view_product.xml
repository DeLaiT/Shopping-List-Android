<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="pl.jergro.shopinglist.models.Product" />

        <variable
            name="adp"
            type="pl.jergro.shopinglist.ui.adapters.ProductsListAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> adp.onProductClicked(product)}"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/productNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/bold"
            android:maxLines="1"
            android:padding="12dp"
            android:text="@{product.name}"
            android:textColor="@{product.done ? @color/md_grey_500 : @color/md_grey_900}"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/productPriceText"
            app:layout_constraintEnd_toStartOf="@+id/checkbox"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Product name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/productPriceText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawablePadding="6dp"
            android:drawableTint="@color/md_grey_500"
            android:ellipsize="end"
            android:fontFamily="@font/bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="12dp"
            android:text="@{String.valueOf(product.price)}"
            android:textColor="@color/md_grey_500"
            android:textSize="14sp"
            android:visibility="@{product.price > 0.0 ? View.VISIBLE : View.GONE}"
            app:drawableStartCompat="@drawable/ic_round_monetization_on_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/productNameText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productNameText"
            tools:text="0.00"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/checkbox"
            style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:onClick="@{() -> adp.onProductChecked(product)}"
            android:padding="12dp"
            android:src="@{product.done ? @drawable/ic_round_check_circle_outline_24px : @drawable/ic_round_radio_button_unchecked_24px}"
            android:tint="@{product.done ? @color/md_blue_A400 : @color/md_grey_400}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/productNameText"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>